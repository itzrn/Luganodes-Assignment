{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "utils/*": ["utils/*"],
      "core/*": ["core/*"],
      "adapters/*": ["adapters/*"],
      "database/*": ["database/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
